# Environment Variables for Netlify Deployment
# Copy this file to .env.local for local development
# Add these environment variables in Netlify dashboard under Site Settings > Environment Variables

# Next.js Configuration
NEXT_PUBLIC_APP_URL=https://your-site-name.netlify.app
NEXT_PUBLIC_API_URL=https://api.legali.io

# Authentication Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://your-site-name.netlify.app

# API Configuration
API_BASE_URL=https://api.legali.io
API_TIMEOUT=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Database/Storage (if applicable)
# DATABASE_URL=your-database-connection-string
# STORAGE_BUCKET=your-storage-bucket

# External Services
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-tracking-id
